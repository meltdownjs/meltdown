{
  "name": "@meltdownjs/cn",
  "homepage": "https://github.com/meltdownjs/meltdown/tree/main/packages/cn",
  "description": "`@meltdownjs/cn` is a utility function for combining multiple CSS class names into a single string while also resolving any conflicting classes.",
  "keywords": [
    "tailwind",
    "classnames",
    "utility",
    "css",
    "styling",
    "ui",
    "clsx",
    "tailwind-merge",
    "twMerge"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meltdownjs/meltdown.git"
  },
  "bugs": {
    "url": "https://github.com/meltdownjs/meltdown/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun --bunx vite build",
    "lint": "biome lint ./src",
    "test": "vitest --run",
    "format": "biome format --write ."
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@meltdownjs/biomejs-config": "workspace:*",
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "~5.7.2",
    "vite": "^6.1.1",
    "vitest": "^3.0.6",
    "vite-plugin-dts": "^4.5.0"
  },
  "version": "1.2.1"
}
